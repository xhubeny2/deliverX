generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Delivery {
  id          String   @id @default(cuid())
  customerName String
  address      String
  status       DeliveryStatus @default(PENDING)
  eta          String?  // AI generated estimated time of arrival
  createdAt    DateTime @default(now())
}

enum DeliveryStatus {
  PENDING
  ON_THE_WAY
  DELIVERED
}
